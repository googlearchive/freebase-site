<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en" lang="en">
  <acre:script>
    acre.request.path_info = acre.request.url.substring(acre.request.base_url.length);
    var mf = acre.require("MANIFEST").mf;
    var g = acre.require("/freebase/apps/global/templates", mf.version["/freebase/apps/global"]).g;
    var util = acre.require("util");
    var o = util.setup(g);
    var t = acre.require("docs");
  </acre:script>
  <head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
    <link rel="stylesheet" href="http://docs.${acre.host.name}/docs_style.css" type="text/css" media="screen" charset="utf-8" />
    <link rel="stylesheet" type="text/css" href="${g.lib.freebase_static_resource_url('/resources/css/global.css')}" />  
  </head>
  <body id="help-viewer-standalone">
    <acre:block if="o.section_url">
      ${t.helpsection(o)}
    </acre:block>
    <acre:block elif="o.doc_content">
      <div id="help-section">
        <div id="help-content" class="wide">
          ${acre.markup.bless(util.get_content(o.doc_content, o.query))}
        </div>
      </div>
    </acre:block>
  </body>
</html>
