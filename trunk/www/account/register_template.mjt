<acre:script>
  var h = acre.require("lib/helper/helpers.sjs");
  var c = this.exports.c = {};
</acre:script>

<acre:block def="title()">
  Register for Freebase
</acre:block>

<acre:block def="head()">
  <link rel="stylesheet" type="text/css" href="account.mf.css" />
</acre:block>

<acre:block def="content_body()">
  <div id="page-content">
    <div id="registration" class="module">
      <div id="register-accordion">
        ${create_account_pane()}
        ${claim_account_pane()}
      </div>
    </div>
  </div>
</acre:block>

<acre:block def="create_account_pane()">
  <h2 class="current">Create a new Freebase account</h2>
  <div class="pane">
    <p>
      <i>
        For now, new accounts can only be created on <a href="https://www.freebase.com/signin/login">www.freebase.com</a>
        using the Google option.  It may also take up to 24 hours for newly created accounts to begin working.
      </i>
    </p>
    <!--
    <form name="account-create"
          method="post"
          action="${h.ajax_url('/register_create_submit')}">
      <fieldset>
        <label for="username">Now you just need to pick a username.</label>
        <div class="form-field clear">
          <input name="username" class="input-standard" id="username"
                 type="text" spellcheck="false">
          <script type="text/javascript">
            document.getElementById("username").select();
          </script>
          <span class="input-help">
            Pick something unique. No spaces or special characters allowed.
          </span>
          <span class="input-error"></span>
        </div>
      </fieldset>

      <p>By clicking the "Create my Account" button below, you are agreeing to
        the <a target="_blank" href="/policies/tos">Freebase Terms of Service</a>
        and to receive email announcements about changes to the Freebase service.
      </p>

      <button class="submit button button-primary" name="create" type="submit">
        Create my Account
      </button>
    </form>
    -->
  </div>
</acre:block>

<acre:block def="claim_account_pane()">
  <h2 class="current">Connect to an existing Freebase account</h2>
  <div class="pane">
    <form name="account-claim"
          method="post"
          action="${h.ajax_url('/register_claim_submit')}">
      <fieldset>
        <label for="username">
          Enter Freebase username to connect to your Google account.
        </label>
        <div class="form-field clear">
          <input name="username" id="username" class="input-standard"
                 type="text" spellcheck="false">
          <script type="text/javascript">
            document.getElementById("username").select();
          </script>
          <span class="input-help"></span>
          <span class="input-error"></span>
        </div>
      </fieldset>

      <p>By clicking the "Connect my Account" button below, you are agreeing to
        the <a target="_blank" href="/policies/tos">Freebase Terms of Service</a>
        and to receive email announcements about changes to the Freebase service.
      </p>

      <button class="submit button button-primary" name="claim" type="submit">
        Connect my Account
      </button>
    </form>
  </div>
</acre:block>

<acre:block def="footer_script()">
  <script src="register.mf.js"></script>
</acre:block>
