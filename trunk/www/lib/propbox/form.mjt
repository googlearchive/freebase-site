<acre:script>
  var h = acre.require("helper/helpers.sjs");
  var i18n = acre.require("i18n/i18n.sjs");  
  var _ = i18n.gettext;
</acre:script>

<acre:block def="row_msg(msg_default, remove_jquery_selector)">
  <span>
    <acre:block if="remove_jquery_selector">
      <a class="close-msg" href="#"
         onclick="$$(this).parents('${remove_jquery_selector}').remove(); return false;">${_("close")}</a>
    </acre:block>
    <acre:block else="">
      <a class="close-msg" style="visibility:hidden;" href="#"
         onclick="$$(this).css('visibility', 'hidden').next().find('.msg-default').show().next().html('&nbsp'); return false;">${_("close")}</a>
    </acre:block>
    <span>
      <span class="msg-default">${msg_default}</span>
      <span></span>
    </span>
  </span>
</acre:block>

<!!--
  @param save - The label of the save/submit button. Defaults to "Save"
  @param cancel - The label of the cancel button. Defaults to "Cancel"
  @param reverse_button - If TRUE, the order is [cancel] [save]. Defaults to [save] [cancel] order.
  @param reverse_primary - If TRUE, the second button will have the "button-primary" class. 
                           Defaults to the first button having the "button-primary" class
!!-->
<acre:block def="submit_buttons(save, cancel, reverse_button, reverse_primary)">
  <acre:script>
    var save = save || _('Save');
    var cancel = cancel || _('Cancel');
    // TODO: other/extra buttons
  </acre:script>
  <acre:block if="reverse_button">
    <button class="button button-cancel${reverse_primary ? '' : ' button-primary'}">${cancel}</button>
    <button class="button button-submit${reverse_primary ? ' button-primary' : ''}" type="submit">${save}</button>
  </acre:block>
  <acre:block else="">
    <button class="button button-submit${reverse_primary ? '' : ' button-primary'}" type="submit">${save}</button>
    <button class="button button-cancel${reverse_primary ? ' button-primary' : ''}">${cancel}</button>
  </acre:block>
</acre:block>
