          "lang|=": ["/lang/iw", "/lang/en"],
          optional: true
        }],
        optional: true,
        link: {creator:null}
      }]
    }]
  });


  // deep property
  prop_structure = {
    id: "/prop/id",
    expected_type: {
      id: "/some/type"
    },
    properties: [{
      id: "/subprop/1",
      expected_type: {
        id: "/type/text"
